{
    "compilerOptions": {
        "target": "es2016",
        "outDir": "dist",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["."],
    "exclude": ["dist", "node_modules"]
}
